{
  "name": "wirecard/woocommerce-ee",
  "description": "WooCommerce plugin for Wirecard Payment Processing Gateway",
  "license": "GPL-3.0",
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "wirecard/payment-sdk-php": ">=1.0.11"
  },
  "repositories":[
    {
      "type":"composer",
      "url":"https://wpackagist.org"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "5.3.5",
    "johnpbloch/wordpress": ">=4.9.1",
    "wp-coding-standards/wpcs": ">=0.14.0",
    "wpackagist-plugin/woocommerce": ">=3.2.4",
    "composer/installers": "^1.0"
  },
  "type": "wordpress-plugin",
  "scripts": {
    "upload-coverage": "coveralls -v",
    "cs-check": "phpcs --standard=phpcs.xml .",
    "cs-fix": "phpcbf --standard=phpcs.xml .",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  },
  "config": {
    "vendor-dir":"wc-wirecard-ee/vendor"
  },
  "extra": {
    "wordpress-install-dir": "wc-wirecard-ee/vendor/wordpress",
    "installer-paths": {
      "wc-wirecard-ee/vendor/woocommerce": ["type:wordpress-plugin"]
    }
  }
}